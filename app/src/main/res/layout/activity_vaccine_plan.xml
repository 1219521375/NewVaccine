<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pokestar.vaccineremind.ui.activity.VaccinePlanActivity">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_vaccine_plan"
                app:layout_scrollFlags="scroll|enterAlways"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.support.design.widget.TabLayout
                android:id="@+id/tabs_vaccine_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@color/background_green"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_vaccine_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v4.view.ViewPager>

        </LinearLayout>





</android.support.constraint.ConstraintLayout>
